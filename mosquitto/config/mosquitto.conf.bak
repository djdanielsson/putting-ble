# Mosquitto Config for Development Environment

# Basic Configuration
persistence true
persistence_location /mosquitto/data/
log_dest file /mosquitto/log/mosquitto.log

# Default listener
bind_address 127.0.0.1
listener 1883 

# Allow anonymous connections for development
allow_anonymous true

# Websockets listener (uncomment if you need WebSocket support)
# listener 9001
# protocol websockets
